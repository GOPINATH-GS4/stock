doctype html 
html(lang='en', xmlns='http://www.w3.org/1999/html')

include ./head.jade
link(href='assets/css/base.css', type='text/css', rel='stylesheet', media='screen and (min-width: 100px)')
link(href='assets/css/core.css', type='text/css', rel='stylesheet', media='screen and (min-width: 100px)')


body
  div.login-card  
    if typeof error != 'undefined'
      div.error.red
        p #{error}

    div.label
      h1.white Login

    form(name="login", action="/login", method="post")
      input(type="text", name="username", placeholder="username")
      input#passwd(type="password", name="password", placeholder="password")
      input(type="submit", value="Login", class="login login-submit")
      
      div.login-help
        div.left
          a(href="/register") Register
        div.right
          a(href="/reset") Forgot Password

script(type="text/javascript", src="lib/login.js")
